<div class="md:flex md:items-center md:justify-between mt-10">
  <div class="min-w-0 flex-1">
    <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">My Lists</h1>
  </div>
  <div class="mt-4 flex md:mt-0 md:ml-4">
    <button type="button" class="ml-3 inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Create a todo-list</button>
  </div>
</div>

<div class="mt-6 flow-root">
  <ul role="list" class="-my-5 divide-y divide-gray-200">
    {{#each @todoLists as |todoList|}}
      <TodoLists::Element @todoList={{todoList}} />
    {{/each}}
  </ul>
</div>